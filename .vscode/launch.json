    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "graph-visualizer/main.py",
                "FLASK_DEBUG": "1",
                "PYTHONPATH": "${workspaceFolder}/graph-visualizer" 
            },
            "args": [
                "--app",
                "${workspaceFolder}/graph-visualizer/main.py",
                "--debug",
                "run"
            ],
            "jinja": true,
            "autoStartBrowser": false
        }
    ]
}